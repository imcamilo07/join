-- ================= CONFIG =================
local MAX_SERVERS = 5

-- ================= SETUP =================
local player = game.Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- Esperar a que exista PetMenu (sin romper nada)
local petMenu
repeat
	petMenu = PlayerGui:FindFirstChild("PetMenu")
	task.wait()
until petMenu

local mainFrame = petMenu:WaitForChild("Frame")
local scrolling = mainFrame:WaitForChild("ScrollingFrame")

local usados = {} -- ignorados

-- ================= UTILS =================
local function parseValor(txt)
	if not txt then return nil end
	txt = txt:gsub("%s","")

	local num = tonumber(txt:match("[%d%.]+"))
	if not num then return nil end

	if txt:find("B") then
		return num * 1e9
	elseif txt:find("M") then
		return num * 1e6
	end
	return nil
end

-- ================= BIG JOIN GUI (NO SE MUEVE) =================
local gui = Instance.new("ScreenGui")
gui.Name = "BIG_JOIN_GUI"
gui.ResetOnSpawn = false
gui.Parent = PlayerGui

local bigBtn = Instance.new("TextButton")
bigBtn.Size = UDim2.new(0, 320, 0, 120)
bigBtn.Position = UDim2.new(0.5, -160, 0.7, 0) -- MISMA POSICIÃ“N
bigBtn.BackgroundColor3 = Color3.fromRGB(0,170,0)
bigBtn.TextColor3 = Color3.new(1,1,1)
bigBtn.TextScaled = true
bigBtn.Font = Enum.Font.SourceSansBold
bigBtn.Visible = false
bigBtn.Parent = gui

-- ================= CORE =================
local function escanear()
	local lista = {}
	local vistos = 0

	print("----- [Auto] Escaneando servidores (solo 5) -----")

	for _,obj in ipairs(scrolling:GetChildren()) do
		if obj:IsA("Frame") then
			local lbl = obj:FindFirstChildWhichIsA("TextLabel")
			if lbl then
				local valor = parseValor(lbl.Text)
				if valor then
					vistos += 1
					print("[Scan #" .. vistos .. "]", lbl.Text)

					if vistos <= MAX_SERVERS then
						table.insert(lista, {
							frame = obj,
							valor = valor,
							texto = lbl.Text,
							firma = vistos .. "_" .. lbl.Text
						})
					end
				end
			end
		end
		if vistos >= MAX_SERVERS then break end
	end

	if #lista == 0 then
		print("[Auto] NingÃºn servidor vÃ¡lido")
		bigBtn.Visible = false
		return
	end

	table.sort(lista, function(a,b)
		return a.valor > b.valor
	end)

	local mejor = nil
	for _,srv in ipairs(lista) do
		if not usados[srv.firma] then
			mejor = srv
			break
		else
			print("[Auto] Ignorado:", srv.texto)
		end
	end

	if not mejor then
		print("[Auto] Todos los servidores visibles estÃ¡n ignorados")
		bigBtn.Visible = false
		return
	end

	print("[Auto] Mejor servidor:", mejor.texto)

	bigBtn.Text = "JOIN " .. mejor.texto
	bigBtn.Visible = true

	-- limpiar conexiones viejas
	for _,c in ipairs(getconnections(bigBtn.MouseButton1Click)) do
		c:Disable()
	end

	bigBtn.MouseButton1Click:Connect(function()
		usados[mejor.firma] = true
		print("[Auto] Marcado como ignorado:", mejor.texto)

		bigBtn.Visible = false

		local inner = mejor.frame:FindFirstChildWhichIsA("Frame")
		if not inner then
			warn("Inner Frame no encontrado")
			return
		end

		local joinBtn = inner:FindFirstChildWhichIsA("TextButton")
		if not joinBtn then
			warn("JOIN no encontrado")
			return
		end

		-- ðŸ”¥ JOIN REAL (NO SE TOCA)
		pcall(function()
			for _,conn in ipairs(getconnections(joinBtn.MouseButton1Click)) do
				conn:Fire()
			end
		end)
	end)
end

-- ================= TRIGGERS =================

-- Escaneo rÃ¡pido al refrescar (sin mover nada)
scrolling.ChildAdded:Connect(function()
	task.wait(0.05)
	escanear()
end)

print("[Auto] Script listo. Usa Refresh manual.")











