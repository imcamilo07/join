-- ================= CONFIG =================
local MAX_SERVERS = 5

-- ================= SETUP =================
local player = game.Players.LocalPlayer
local petMenu = player.PlayerGui:WaitForChild("PetMenu")
local mainFrame = petMenu:WaitForChild("Frame")
local scrolling = mainFrame:WaitForChild("ScrollingFrame")

local usados = {}

-- ================= UTILS =================
local function parseValor(txt)
	if not txt then return nil end
	txt = txt:gsub("%s","")

	local num, suf = txt:match("([%d%.]+)([MB])")
	if not num or not suf then return nil end

	num = tonumber(num)
	if not num then return nil end

	if suf == "B" then
		return num * 1e9, num .. "B"
	else
		return num * 1e6, num .. "M"
	end
end

-- ================= BIG JOIN GUI =================
local gui = Instance.new("ScreenGui")
gui.Name = "BIG_JOIN_GUI"
gui.ResetOnSpawn = false
gui.Parent = player.PlayerGui

local bigBtn = Instance.new("TextButton")
bigBtn.Size = UDim2.new(0, 320, 0, 120)
bigBtn.Position = UDim2.new(1, -340, 0.5, -60) -- derecha-centro (iPhone friendly)
bigBtn.BackgroundColor3 = Color3.fromRGB(0,170,0)
bigBtn.TextColor3 = Color3.new(1,1,1)
bigBtn.TextScaled = true
bigBtn.Font = Enum.Font.SourceSansBold
bigBtn.Visible = false
bigBtn.Parent = gui

-- ================= CORE =================
local function escanear()
	local lista = {}
	local vistos = 0

	print("----- [Auto] Escaneando servidores -----")

	for _,obj in ipairs(scrolling:GetChildren()) do
		if obj:IsA("Frame") then
			local lbl = obj:FindFirstChildWhichIsA("TextLabel")
			if lbl then
				local valor, textoLimpio = parseValor(lbl.Text)
				if valor then
					vistos += 1
					print("[Scan #" .. vistos .. "]", lbl.Text)

					if vistos <= MAX_SERVERS then
						table.insert(lista, {
							frame = obj,
							valor = valor,
							texto = textoLimpio,
							firma = textoLimpio
						})
					end
				end
			end
		end
		if vistos >= MAX_SERVERS then break end
	end

	if #lista == 0 then
		print("[Auto] Ning√∫n servidor v√°lido")
		bigBtn.Visible = false
		return
	end

	table.sort(lista, function(a,b)
		return a.valor > b.valor
	end)

	local mejor = lista[1]

	if usados[mejor.firma] then
		print("[Auto] Servidor ya usado:", mejor.texto)
		bigBtn.Visible = false
		return
	end

	print("[Auto] Mejor servidor:", mejor.texto)

	bigBtn.Text = "JOIN " .. mejor.texto
	bigBtn.Visible = true

	-- limpiar conexiones viejas
	for _,c in ipairs(getconnections(bigBtn.MouseButton1Click)) do
		c:Disable()
	end

	bigBtn.MouseButton1Click:Connect(function()
		usados[mejor.firma] = true
		bigBtn.Visible = false

		local inner = mejor.frame:FindFirstChildWhichIsA("Frame")
		if not inner then
			warn("Inner Frame no encontrado")
			return
		end

		local joinBtn = inner:FindFirstChildWhichIsA("TextButton")
		if not joinBtn then
			warn("JOIN no encontrado")
			return
		end

		print("[Auto] Ejecutando JOIN real:", mejor.texto)

		-- üî• JOIN REAL (EL QUE S√ç FUNCIONA)
		for _,conn in ipairs(getconnections(joinBtn.MouseButton1Click)) do
			conn:Fire()
		end
	end)
end

-- ================= TRIGGER =================
scrolling.ChildAdded:Connect(function()
	task.wait(0.3)
	escanear()
end)

print("[Auto] Script listo. Refresca manualmente.")




