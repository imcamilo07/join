-- ================= CONFIG =================
local MAX_SERVERS = 5

-- ================= SETUP =================
local player = game.Players.LocalPlayer
local petMenu = player.PlayerGui:WaitForChild("PetMenu")
local mainFrame = petMenu:WaitForChild("Frame")
local scrolling = mainFrame:WaitForChild("ScrollingFrame")

-- Servidores usados / ignorados
local usados = {}

-- ================= UTILS =================
local function parseValor(txt)
	if not txt then return nil end
	txt = txt:gsub("%s","")

	local num = tonumber(txt:match("[%d%.]+"))
	if not num then return nil end

	if txt:find("B") then
		return num * 1e9
	elseif txt:find("M") then
		return num * 1e6
	end

	return nil
end

-- ================= BIG JOIN GUI =================
local gui = Instance.new("ScreenGui")
gui.Name = "BIG_JOIN_GUI"
gui.ResetOnSpawn = false
gui.Parent = player.PlayerGui

local bigBtn = Instance.new("TextButton")
bigBtn.Size = UDim2.new(0, 260, 0, 90)
bigBtn.Position = UDim2.new(1, -280, 0.5, -45) -- centro derecha
bigBtn.BackgroundColor3 = Color3.fromRGB(0,170,0)
bigBtn.TextColor3 = Color3.new(1,1,1)
bigBtn.TextScaled = true
bigBtn.Font = Enum.Font.SourceSansBold
bigBtn.Visible = false
bigBtn.Parent = gui

-- ================= CORE =================
local function escanear()
	local lista = {}
	local contados = 0

	print("----- [Auto] Escaneando SOLO los primeros 5 servidores -----")

	for _,obj in ipairs(scrolling:GetChildren()) do
		if obj:IsA("Frame") then
			-- Buscar el TextLabel de valor (90M, 1B, etc)
			for _,child in ipairs(obj:GetChildren()) do
				if child:IsA("TextLabel") then
					local valor = parseValor(child.Text)
					if valor then
						contados += 1

						print("[Scan #" .. contados .. "]", child.Text)

						table.insert(lista, {
							frame = obj,
							valor = valor,
							texto = child.Text,
							firma = child.Text .. "_" .. tostring(contados)
						})

						break
					end
				end
			end
		end

		if contados >= MAX_SERVERS then
			break
		end
	end

	if #lista == 0 then
		print("[Auto] Ning칰n servidor v치lido")
		bigBtn.Visible = false
		return
	end

	-- Ordenar de mayor a menor
	table.sort(lista, function(a,b)
		return a.valor > b.valor
	end)

	-- Elegir el mejor NO ignorado
	local mejor = nil
	for _,srv in ipairs(lista) do
		if not usados[srv.firma] then
			mejor = srv
			break
		end
	end

	if not mejor then
		print("[Auto] Todos los servidores escaneados est치n ignorados")
		bigBtn.Visible = false
		return
	end

	print("[Auto] Mejor servidor:", mejor.texto)

	bigBtn.Text = "JOIN " .. mejor.texto
	bigBtn.Visible = true

	-- Limpiar conexiones previas
	for _,c in ipairs(getconnections(bigBtn.MouseButton1Click)) do
		c:Disable()
	end

	bigBtn.MouseButton1Click:Connect(function()
		usados[mejor.firma] = true
		print("[Auto] Ignorado:", mejor.texto)

		bigBtn.Visible = false

		local inner = mejor.frame:FindFirstChildWhichIsA("Frame")
		if not inner then
			warn("Inner Frame no encontrado")
			return
		end

		local joinBtn = inner:FindFirstChildWhichIsA("TextButton")
		if not joinBtn then
			warn("JOIN no encontrado")
			return
		end

		-- 游댠 JOIN REAL (NO TOCAR)
		pcall(function()
			for _,conn in ipairs(getconnections(joinBtn.MouseButton1Click)) do
				conn:Fire()
			end
		end)
	end)
end

-- ================= TRIGGERS =================
scrolling.ChildAdded:Connect(function()
	task.wait(0.15) -- m치s r치pido
	escanear()
end)

print("[Auto] Script listo. Refresca manualmente.")









